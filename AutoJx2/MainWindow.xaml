<Window x:Class="AutoJx2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AutoJx2 - Game Automation Tool" 
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🎮 AutoJx2" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>
                <TextBlock Text="Game Automation Tool" 
                           FontSize="14" 
                           Foreground="#FFCCCCCC" 
                           VerticalAlignment="Center" 
                           Margin="10,0,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- Tab 1: Game Control -->
            <TabItem Header="🎮 Game Control">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Game Process Selection -->
                    <GroupBox Grid.Row="0" Header="Game Process" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox x:Name="GameProcessComboBox" 
                                      Grid.Column="0" 
                                      Margin="5"
                                      DisplayMemberPath="ProcessName"/>
                            <Button x:Name="RefreshProcessesButton" 
                                    Grid.Column="1" 
                                    Content="🔄 Refresh" 
                                    Click="RefreshProcessesButton_Click"/>
                            <Button x:Name="AttachProcessButton" 
                                    Grid.Column="2" 
                                    Content="🔗 Attach" 
                                    Click="AttachProcessButton_Click"/>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Automation Controls -->
                    <GroupBox Grid.Row="1" Header="Automation Features" Margin="0,0,0,10">
                        <WrapPanel>
                            <CheckBox x:Name="AutoFarmingCheckBox" 
                                      Content="🌾 Auto Farming" 
                                      Margin="10,5"/>
                            <CheckBox x:Name="AutoQuestCheckBox" 
                                      Content="📜 Auto Quest" 
                                      Margin="10,5"/>
                            <CheckBox x:Name="AutoCombatCheckBox" 
                                      Content="⚔️ Auto Combat" 
                                      Margin="10,5"/>
                            <CheckBox x:Name="AutoHealCheckBox" 
                                      Content="💊 Auto Heal" 
                                      Margin="10,5"/>
                        </WrapPanel>
                    </GroupBox>
                    
                    <!-- Hotkeys -->
                    <GroupBox Grid.Row="2" Header="Hotkeys" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="Start/Stop:"/>
                            <TextBox x:Name="HotkeyTextBox" 
                                     Grid.Column="1" 
                                     Text="F12" 
                                     IsReadOnly="True"/>
                            <Button x:Name="SetHotkeyButton" 
                                    Grid.Column="2" 
                                    Content="Set" 
                                    Click="SetHotkeyButton_Click"/>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Status -->
                    <GroupBox Grid.Row="3" Header="Status">
                        <StackPanel>
                            <TextBlock x:Name="StatusTextBlock" 
                                       Text="Status: Ready" 
                                       FontWeight="Bold" 
                                       Margin="5"/>
                            <ProgressBar x:Name="StatusProgressBar" 
                                         Height="20" 
                                         Margin="5"/>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <Button x:Name="StartAutomationButton" 
                                        Content="▶️ Start Automation" 
                                        Click="StartAutomationButton_Click" 
                                        Margin="5,0"/>
                                <Button x:Name="StopAutomationButton" 
                                        Content="⏹️ Stop Automation" 
                                        Click="StopAutomationButton_Click" 
                                        Margin="5,0"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
            
            <!-- Tab 2: Settings -->
            <TabItem Header="⚙️ Settings">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Credentials -->
                    <GroupBox Grid.Row="0" Header="Game Credentials" Margin="0,0,0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Label Grid.Row="0" Grid.Column="0" Content="Username:"/>
                            <TextBox x:Name="UsernameTextBox" 
                                     Grid.Row="0" Grid.Column="1" 
                                     Margin="5"/>
                            <Button x:Name="SaveCredentialsButton" 
                                    Grid.Row="0" Grid.Column="2" 
                                    Content="💾 Save" 
                                    Click="SaveCredentialsButton_Click"/>
                            
                            <Label Grid.Row="1" Grid.Column="0" Content="Password:"/>
                            <PasswordBox x:Name="PasswordBox" 
                                         Grid.Row="1" Grid.Column="1" 
                                         Margin="5"/>
                            
                            <Label Grid.Row="2" Grid.Column="0" Content="Server:"/>
                            <ComboBox x:Name="ServerComboBox" 
                                      Grid.Row="2" Grid.Column="1" 
                                      Margin="5">
                                <ComboBoxItem Content="Server 1"/>
                                <ComboBoxItem Content="Server 2"/>
                                <ComboBoxItem Content="Server 3"/>
                            </ComboBox>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Automation Settings -->
                    <GroupBox Grid.Row="1" Header="Automation Settings" Margin="0,0,0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Label Grid.Row="0" Grid.Column="0" Content="Delay (ms):"/>
                            <TextBox x:Name="DelayTextBox" 
                                     Grid.Row="0" Grid.Column="1" 
                                     Text="1000" 
                                     Margin="5"/>
                            <Label Grid.Row="0" Grid.Column="2" Content="ms"/>
                            
                            <Label Grid.Row="1" Grid.Column="0" Content="Max HP %:"/>
                            <TextBox x:Name="MaxHpTextBox" 
                                     Grid.Row="1" Grid.Column="1" 
                                     Text="80" 
                                     Margin="5"/>
                            <Label Grid.Row="1" Grid.Column="2" Content="%"/>
                            
                            <Label Grid.Row="2" Grid.Column="0" Content="Max MP %:"/>
                            <TextBox x:Name="MaxMpTextBox" 
                                     Grid.Row="2" Grid.Column="1" 
                                     Text="70" 
                                     Margin="5"/>
                            <Label Grid.Row="2" Grid.Column="2" Content="%"/>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Logging -->
                    <GroupBox Grid.Row="2" Header="Logging" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="Log Level:"/>
                            <ComboBox x:Name="LogLevelComboBox" 
                                      Grid.Column="1" 
                                      Margin="5">
                                <ComboBoxItem Content="Information" IsSelected="True"/>
                                <ComboBoxItem Content="Warning"/>
                                <ComboBoxItem Content="Error"/>
                                <ComboBoxItem Content="Debug"/>
                            </ComboBox>
                            <Button x:Name="OpenLogsButton" 
                                    Grid.Column="2" 
                                    Content="📁 Open Logs" 
                                    Click="OpenLogsButton_Click"/>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Actions -->
                    <GroupBox Grid.Row="3" Header="Actions">
                        <StackPanel>
                            <Button x:Name="ExportSettingsButton" 
                                    Content="📤 Export Settings" 
                                    HorizontalAlignment="Left" 
                                    Margin="5" 
                                    Click="ExportSettingsButton_Click"/>
                            <Button x:Name="ImportSettingsButton" 
                                    Content="📥 Import Settings" 
                                    HorizontalAlignment="Left" 
                                    Margin="5" 
                                    Click="ImportSettingsButton_Click"/>
                            <Button x:Name="ResetSettingsButton" 
                                    Content="🔄 Reset to Default" 
                                    HorizontalAlignment="Left" 
                                    Margin="5" 
                                    Click="ResetSettingsButton_Click"/>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
            
            <!-- Tab 3: Auto Login -->
            <TabItem Header="🔐 Auto Login">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Game Path Selection -->
                    <GroupBox Grid.Row="0" Header="Đường dẫn Game" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="GamePathTextBox" 
                                     Grid.Column="0" 
                                     Margin="5"
                                     IsReadOnly="True"
                                     Text="Chưa chọn đường dẫn game"/>
                            <Button x:Name="BrowseGamePathButton" 
                                    Grid.Column="1" 
                                    Content="📁 Chọn" 
                                    Click="BrowseGamePathButton_Click"
                                    Margin="5,0"/>
                            <Button x:Name="SaveGamePathButton" 
                                    Grid.Column="2" 
                                    Content="💾 Lưu" 
                                    Click="SaveGamePathButton_Click"
                                    Margin="5,0"/>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Account Management -->
                    <GroupBox Grid.Row="1" Header="Quản lý Account" Margin="0,0,0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Account Actions -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                <Button x:Name="AddAccountButton" 
                                        Content="➕ Thêm Account" 
                                        Click="AddAccountButton_Click"
                                        Margin="0,0,5,0"/>
                                <Button x:Name="RefreshAccountsButton" 
                                        Content="🔄 Làm mới" 
                                        Click="RefreshAccountsButton_Click"
                                        Margin="5,0"/>
                                <Button x:Name="RemoveSelectedAccountsButton" 
                                        Content="🗑️ Xóa đã chọn" 
                                        Click="RemoveSelectedAccountsButton_Click"
                                        Margin="5,0"/>
                            </StackPanel>
                            
                            <!-- Account List -->
                            <ListView x:Name="AccountsListView" 
                                      Grid.Row="1" 
                                      Height="200"
                                      SelectionMode="Multiple"
                                      MouseDoubleClick="AccountsListView_MouseDoubleClick">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Chọn" Width="50">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding IsSelected}" 
                                                              Tag="{Binding}"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Tên đăng nhập" Width="150" DisplayMemberBinding="{Binding Username}"/>
                                        <GridViewColumn Header="Server" Width="100" DisplayMemberBinding="{Binding Server}"/>
                                        <GridViewColumn Header="Trạng thái" Width="100">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock>
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Text" Value="🟢 Đang chạy"/>
                                                                <Setter Property="Foreground" Value="Green"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsRunning}" Value="False">
                                                                        <Setter Property="Text" Value="🔴 Dừng"/>
                                                                        <Setter Property="Foreground" Value="Red"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Ghi chú" Width="Auto" DisplayMemberBinding="{Binding Notes}"/>
                                    </GridView>
                                </ListView.View>
                                <ListView.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="▶️ Khởi động Game" Click="StartGameMenuItem_Click"/>
                                        <MenuItem Header="⏹️ Dừng Game" Click="StopGameMenuItem_Click"/>
                                        <Separator/>
                                        <MenuItem Header="✏️ Chỉnh sửa" Click="EditAccountMenuItem_Click"/>
                                        <MenuItem Header="👁️ Ẩn/Hiện" Click="ToggleVisibilityMenuItem_Click"/>
                                        <MenuItem Header="🗑️ Xóa" Click="RemoveAccountMenuItem_Click"/>
                                    </ContextMenu>
                                </ListView.ContextMenu>
                            </ListView>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Status -->
                    <GroupBox Grid.Row="2" Header="Trạng thái">
                        <StackPanel>
                            <TextBlock x:Name="AutoLoginStatusTextBlock" 
                                       Text="Sẵn sàng" 
                                       FontWeight="Bold" 
                                       Margin="5"/>
                            <TextBlock x:Name="AutoLoginInfoTextBlock" 
                                       Text="Chọn đường dẫn game và thêm account để bắt đầu" 
                                       Foreground="Gray" 
                                       Margin="5"/>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
            
            <!-- Tab 4: Logs -->
            <TabItem Header="📋 Logs">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button x:Name="ClearLogsButton" 
                                Content="🗑️ Clear" 
                                Click="ClearLogsButton_Click"/>
                        <Button x:Name="RefreshLogsButton" 
                                Content="🔄 Refresh" 
                                Click="RefreshLogsButton_Click" 
                                Margin="5,0,0,0"/>
                        <Button x:Name="SaveLogsButton" 
                                Content="💾 Save" 
                                Click="SaveLogsButton_Click" 
                                Margin="5,0,0,0"/>
                    </StackPanel>
                    
                    <TextBox x:Name="LogsTextBox" 
                             Grid.Row="1" 
                             IsReadOnly="True" 
                             VerticalScrollBarVisibility="Auto" 
                             HorizontalScrollBarVisibility="Auto" 
                             FontFamily="Consolas" 
                             FontSize="10"/>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#FFF0F0F0" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="FooterStatusTextBlock" 
                           Text="Ready" 
                           VerticalAlignment="Center"/>
                <TextBlock Text=" | " 
                           VerticalAlignment="Center" 
                           Margin="5,0"/>
                <TextBlock x:Name="FooterTimeTextBlock" 
                           Text="00:00:00" 
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

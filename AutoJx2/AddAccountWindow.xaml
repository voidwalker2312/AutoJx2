<Window x:Class="AutoJx2.AddAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm Account"
        Height="424" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20,20,20,11">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="15" CornerRadius="5" Margin="0,0,0,20">
            <TextBlock Text="Thêm Account Mới"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Form -->
        <Grid Grid.Row="1" Margin="0,0,0,61" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Username -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Tên đăng nhập:" VerticalAlignment="Center"/>
                <TextBox x:Name="UsernameTextBox"
                         Grid.Column="1"
                         Height="30"
                         VerticalAlignment="Center"/>
            </Grid>

            <!-- Password -->
            <Grid Grid.Row="1" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Mật khẩu:" VerticalAlignment="Center"/>
                <PasswordBox x:Name="PasswordBox"
                             Grid.Column="1"
                             Height="30"
                             VerticalAlignment="Center" Margin="5,0,5,0" Password=""/>
            </Grid>

            <!-- Server -->
            <Grid Grid.Row="2" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Server:" VerticalAlignment="Center"/>
                <ComboBox x:Name="ServerComboBox"
                          Grid.Column="1"
                          Height="30"
                          VerticalAlignment="Center"
                          IsEditable="True" Margin="5,0,5,0" SelectionChanged="ServerComboBox_SelectionChanged">
                    <ComboBoxItem Content="Server 1" IsSelected="True"/>
                    <ComboBoxItem Content="Server 2"/>
                    <ComboBoxItem Content="Server 3"/>
                    <ComboBoxItem Content="Server 4"/>
                    <ComboBoxItem Content="Server 5"/>
                </ComboBox>
            </Grid>

            <!-- Notes -->
            <Grid Grid.Row="3" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Ghi chú:" VerticalAlignment="Top" Margin="0,5,0,0"/>
                <TextBox x:Name="NotesTextBox"
                         Grid.Column="1"
                         Height="55"
                         VerticalAlignment="Top"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto" Margin="5,5,5,0"/>
            </Grid>

            <!-- Validation Message -->
            <TextBlock x:Name="ValidationMessage"
                       Grid.Row="4"
                       Foreground="Red"
                       FontWeight="Bold"
                       Margin="0,0,0,10"
                       TextWrapping="Wrap"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="CancelButton"
                    Content="Hủy"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"/>
            <Button x:Name="SaveButton"
                    Content="Lưu"
                    Width="100"
                    Height="35"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
